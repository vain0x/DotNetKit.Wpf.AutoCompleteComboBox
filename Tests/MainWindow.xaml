<Window
    x:Class="Tests.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dotNetKitControls="clr-namespace:DotNetKit.Windows.Controls;assembly=DotNetKit.Wpf.AutoCompleteComboBox"
    xmlns:tests="clr-namespace:Tests" xmlns:cases="clr-namespace:Tests.Cases"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance tests:MainViewModel}"
    Title="Tests"
    Width="800" Height="800" FontSize="16">
    <ScrollViewer>
        <StackPanel Margin="16">
            <cases:BasicCase />
            <Separator />
            <cases:CollectionViewSourceCase />
            <Separator />
            <cases:DataGridCase />
        </StackPanel>
    </ScrollViewer>
</Window>
