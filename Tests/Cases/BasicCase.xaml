<UserControl x:Class="Tests.Cases.BasicCase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dotNetKitControls="clr-namespace:DotNetKit.Windows.Controls;assembly=DotNetKit.Wpf.AutoCompleteComboBox"
             xmlns:local="clr-namespace:Tests.Cases"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:BasicCaseViewModel}">
    <GroupBox Header="BasicCase">
        <StackPanel>
            <TextBlock>
                <Run Text="Text:" FontWeight="Bold" />
                <Run Text="{Binding Text, Mode=OneWay}" />
                <Run Text="Selected:" FontWeight="Bold" />
                <Run Text="{Binding SelectedIndex, Mode=OneWay}" />
                <Run Text="{Binding SelectedValue, Mode=OneWay}" />
                <Run Text="{Binding SelectedItem.Name, Mode=OneWay}" />
                <Run Text="Items" FontWeight="Bold" />
                <Run Text="{Binding Items.Count, Mode=OneWay, ElementName=autoCompleteComboBox}" />
            </TextBlock>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <ComboBox
                    x:Name="autoCompleteComboBox"
                    dotNetKitControls:AutoCompleteBehavior.IsAttached="True"
                    SelectedValuePath="Id"
                    TextSearch.TextPath="Name"
                    Text="{Binding Text}"
                    ItemsSource="{Binding Items}"
                    SelectedIndex="{Binding SelectedIndex}"
                    SelectedItem="{Binding SelectedItem}"
                    SelectedValue="{Binding SelectedValue}"
                    HorizontalAlignment="Left" Width="240">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Name, Mode=OneTime}" FontWeight="Bold" />
                                <TextBlock>Id = <Run Text="{Binding Id, Mode=OneTime}" />.</TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Button Command="{Binding SelectPrevCommand}" Width="80" Margin="10,0,0,0">
                    Prev
                </Button>

                <Button Command="{Binding SelectNextCommand}" Width="80" Margin="5,0,0,0">
                    Next
                </Button>

                <Button Command="{Binding ReloadCommand}" Width="80" Margin="10,0,0,0">
                    Reload
                </Button>

                <Button Command="{Binding ClearCommand}" Width="80" Margin="10,0,0,0">
                    Clear
                </Button>
            </StackPanel>
        </StackPanel>
    </GroupBox>
</UserControl>
