<UserControl x:Class="Tests.Cases.BasicCase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dotNetKitControls="clr-namespace:DotNetKit.Windows.Controls;assembly=DotNetKit.Wpf.AutoCompleteComboBox"
             xmlns:local="clr-namespace:Tests.Cases"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:BasicCaseViewModel}">
    <GroupBox Header="BasicCase">
        <StackPanel>
            <!-- Internal state -->
            <TextBlock>
                <Run Text="Text:" FontWeight="Bold" />
                <Run Text="{Binding Text, Mode=OneWay}" />
                <Run Text="Selected:" FontWeight="Bold" />
                <Run Text="{Binding SelectedValue, Mode=OneWay}" />
                <Run Text="{Binding SelectedItem.Name, Mode=OneWay}" />
                <Run Text="Items" FontWeight="Bold" />
                <Run Text="{Binding Items.Count, Mode=OneWay, ElementName=autoCompleteComboBox}" />
            </TextBlock>

            <!-- Controller -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Button Command="{Binding ReloadCommand}" Width="120" Height="40">
                    Reload
                </Button>

                <Button Command="{Binding ClearCommand}" Width="120" Height="40" Margin="5,0">
                    Clear
                </Button>
            </StackPanel>

            <dotNetKitControls:AutoCompleteComboBox
                x:Name="autoCompleteComboBox"
                SelectedValuePath="Id"
                TextSearch.TextPath="Name"
                Text="{Binding Text}"
                ItemsSource="{Binding Items}"
                SelectedItem="{Binding SelectedItem}"
                SelectedValue="{Binding SelectedValue}"
                HorizontalAlignment="Left" Width="240" Margin="0,5">
                <dotNetKitControls:AutoCompleteComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name, Mode=OneTime}" FontWeight="Bold" />
                            <TextBlock>Id = <Run Text="{Binding Id, Mode=OneTime}" />.</TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </dotNetKitControls:AutoCompleteComboBox.ItemTemplate>
            </dotNetKitControls:AutoCompleteComboBox>
        </StackPanel>
    </GroupBox>
</UserControl>
