<UserControl x:Class="Tests.Cases.DataGridCase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dotNetKitControls="clr-namespace:DotNetKit.Windows.Controls;assembly=DotNetKit.Wpf.AutoCompleteComboBox"
             xmlns:local="clr-namespace:Tests.Cases"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance local:DataGridCaseViewModel}">
    <GroupBox Header="DataGridCase (#30)">
        <DataGrid ItemsSource="{Binding TestItems}" AutoGenerateColumns="False" CanUserAddRows="False" MaxHeight="200">
            <DataGrid.Columns>
                <DataGridTextColumn Header="BaseName" Binding="{Binding BaseName}" />
                <DataGridTextColumn Header="PersonId" Binding="{Binding PersonId}" />
                <DataGridTemplateColumn Header="ComboBox">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <dotNetKitControls:AutoCompleteComboBox
                                ItemsSource="{Binding ItemsSource}"
                                SelectedValue="{Binding PersonId, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                SelectedValuePath="Id"
                                TextSearch.TextPath="Name"
                                DisplayMemberPath="Name"
                                HorizontalContentAlignment="Stretch" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </GroupBox>
</UserControl>
