<UserControl x:Class="Tests.Cases.CollectionViewSourceCase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dotNetKitControls="clr-namespace:DotNetKit.Windows.Controls;assembly=DotNetKit.Wpf.AutoCompleteComboBox"
             xmlns:local="clr-namespace:Tests.Cases"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance local:CollectionViewSourceCaseViewModel}">
    <GroupBox>
        <GroupBox.Header>
            <TextBlock>
                CollectionViewSourceCase:
                Changing Items source should preserve SelectedItem if possible (#28)
            </TextBlock>
        </GroupBox.Header>
        <StackPanel>
            <dotNetKitControls:AutoCompleteComboBox
            SelectedValuePath="Id"
            TextSearch.TextPath="Name"
            ItemsSource="{Binding Items}"
            HorizontalAlignment="Left" Width="240">
                <dotNetKitControls:AutoCompleteComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name, Mode=OneTime}" FontWeight="Bold" />
                            <TextBlock>Id = <Run Text="{Binding Id, Mode=OneTime}" />.</TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </dotNetKitControls:AutoCompleteComboBox.ItemTemplate>
            </dotNetKitControls:AutoCompleteComboBox>

            <Separator Margin="0,16" />

            <Button Command="{Binding ReloadCommand}" Width="120" Height="40" HorizontalAlignment="Left">
                Reload
            </Button>

            <Button Command="{Binding ClearCommand}" Width="120" Height="40" Margin="0,8,0,0" HorizontalAlignment="Left">
                Clear
            </Button>
        </StackPanel>
    </GroupBox>
</UserControl>
