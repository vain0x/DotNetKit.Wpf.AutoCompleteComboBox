<ComboBox
    x:Class="DotNetKit.Windows.Controls.AutoCompleteComboBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:DotNetKit.Windows.Controls"
    mc:Ignorable="d" 
    d:DesignWidth="300"
    d:DesignHeight="300"
    IsEditable="True"
    IsTextSearchEnabled="False"
    local:AutoCompleteBehavior.Use="{Binding Setting, TargetNullValue={x:Static local:AutoCompleteComboBoxSetting.Default}, RelativeSource={RelativeSource Mode=Self}}"
    />
